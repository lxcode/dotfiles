# Function defs
import re
import vdfec
from dateutil import tz
from dateutil import parser

to_zone = tz.tzlocal()

def ltime(column):
    return parser.parse(column).astimezone(to_zone)

def nohtml(column):
    tag_re = re.compile(r'(<!--.*?-->|<[^>]*>)')
    return tag_re.sub('', column)

