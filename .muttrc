# monitor these boxes
mailboxes = =Plan =Lists.8lives =Lists.Security.Ctf =Lists.FreeBSD.Developers =Lists.FreeBSD.Security =Lists.FreeBSD.Hackers =Lists.FreeBSD.ppc =Lists.FreeBSD.Ports =Lists.FreeBSD.ports-bugs =Lists.FreeBSD.CVS =Lists.FreeBSD.Current =Lists.FreeBSD.Stable =Lists.FreeBSD.Security =Lists.IETF =Lists.Security.Vulnwatch =Lists.Security.Vuln-Dev =Lists.Security.Bugtraq =Lists.Security.Pen-Test =Lists.Security.Incidents =Lists.Security.FullDisclosure =Lists.Security.VulnDiscuss =Lists.Cocoa =Lists.Fish =Lists.XeTeX =Lists.Antzen =Spam 

# make mutt aware of our mailing lists
subscribe ports freebsd-ports chickensoup citypunk pen-test vuln-dev security-announce incidents bugtraq vulnwatch vulndiscuss full-disclosure fish thiels misc pf firewall-wizards sfs exprise freebsd-current current log ctf bikergoths-l securesoftware badmovie securityjobs osiris osiris-devel DSI_evolver SRX-6 developers cmus-devel cocoa-students 8lives

# CRM114 macros
macro index X "<pipe-message>formail -I X-CRM114-Status -I X-CRM114-Action -I X-CRM114-Version | /usr/local/share/examples/crm114/mailreaver.crm -u /home/lx/.crm114/ --learnspam --force \n<delete-message>"
macro index H "<pipe-message>formail -I X-CRM114-Status -I X-CRM114-Action -I X-CRM114-Version | /usr/local/share/examples/crm114/mailreaver.crm -u /home/lx/.crm114/ --learnnonspam --force \n<save-message>=\n"
macro pager X "<pipe-message>formail -I X-CRM114-Status -I X-CRM114-Action -I X-CRM114-Version | /usr/local/share/examples/crm114/mailreaver.crm -u /home/lx/.crm114/ --learnspam --force \n<delete-message>"
macro pager H "<pipe-message>formail -I X-CRM114-Status -I X-CRM114-Action -I X-CRM114-Version | /usr/local/share/examples/crm114/mailreaver.crm -u /home/lx/.crm114/ --learnnonspam --force \n<save-message>=\n"

macro index A "<save-message>=Archives.2012\n"
macro pager A "<save-message>=Archives.2012\n"

# From the body or index, call urlview.  If explicitly viewed from 
# the attachment menu, use w3m.

macro index \Cv |urlview\n
macro pager \Cv |urlview\n
macro attach \Cv "|w3m -T text\/html\n"

# my keybindings (vi-ish)
bind pager 'j' next-line
bind pager 'k' previous-line
bind pager \Cf next-page
bind pager \Cb previous-page
bind pager G bottom
bind pager l list-reply
bind pager <Tab> next-unread
bind index <space> collapse-thread
bind index G first-entry
bind index \Cf next-page
bind index \Cb previous-page
bind index M current-middle
bind index L limit
bind index l list-reply
bind index <Tab> next-unread
bind attach l list-reply
macro index i 'L~F^M'
macro index 8 'L.^M'

#folder-hook . "push 'M'"

# colors...works with transparency, change black to black if desired
color hdrdefault brightcyan default
color quoted brightgreen default
color signature brightred default
color header brightgreen default ^From:
color header brightgreen default ^Subject:
color indicator brightwhite blue 
color attachment brightmagenta default
color error brightred default
color status brightwhite blue
color tree brightgreen default
color body brightmagenta default "(ftp|http)://[^ )>]+" # point out URLs
color body brightmagenta default [-a-z_0-9.]+@[-a-z_0-9.]+    # e-mail addresses
color index brightmagenta default ~F      # Flagged

# get pgp info
source ~/.muttpgp
